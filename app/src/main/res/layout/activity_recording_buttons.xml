<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recording_buttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.liveperson.hackathon.jobview.jobview.ui.RecordingButtonsActivity">

    <Button
        android:text="Record audio Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moveToRecordLayout"
        android:layout_marginTop="68dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Record video Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moveToRecordVideoLayout"
        android:layout_below="@+id/moveToRecordLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

</RelativeLayout>
